<a-text
    position='{{position}}'
    rotation='{{rotation}}'
    align='center'
    value='{{title}}'
    color='white'
    material='color: white;'
    animation__down='property: scale; easing: easeInSine; from: 1 1 1; dur: 100; to: 0.9 0.9 0.9; startEvents: button-animation-down'
    animation__up='property: scale; easing: easeInSine; to: 1 1 1; dur: 100; from: 0.9 0.9 0.9; startEvents: button-animation-up'
  >
    <a-box
      class='dnd'
      hoverable
      event-emit__common='__event: mouseup; __emit: {{event}};'
      event-emit__animation='__event: mousedown; __emit: button-animation-down;'
      event-set__hoveron='_event: hover-start; material.opacity: 0.8; transparent: true'
      event-set__hoveroff='_event: hover-end; material.opacity: 1; transparent: false'
      material='color: {{color}}; opacity: 1'
      position='0 0 -0.1'
      width='{{width}}'
      height='{{#if height}}{{height}}{{else}}0.5{{/if}}'
      depth='0.1'
      sound='src: #click; on: mousedown; volume: 0.3; poolSize: 5'
    >
    </a-box>
  </a-text>